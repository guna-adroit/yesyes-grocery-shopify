
{{ 'youtube-lite.css' | asset_url | stylesheet_tag}}
<script src="{{ 'youtube-lite.js' | asset_url }}" defer></script>

<style>
        .about-video-section-wrapper{
             position: relative;
        }
        .about-video-section-container{
            background-color: #ED1D23;
        }
        
        .about-video-content{
            padding: 20px;
            padding-bottom: 56px;
        }
        .about-video-container{
            padding: 20px;
            margin-top: 18%;
        }
        .about-video-container lite-youtube{
            width: 85%;
            height: 60vh;
            margin: 0 auto;
            max-width: 100%;
            margin-top: -18%;
        }
        .about-video-content{
            max-width: 883px;
            margin: 0 auto;
        }
        .about-video-content p{
            font-weight: 700;
            font-size: 34px;
            line-height: 44px;
            text-align: center;
            color: white;
        }
        @media screen and (max-width: 1024px){
            .about-video-container{
                margin-top: 24%;
            }
            .about-video-container lite-youtube{
                margin-top: -25%;
                height: unset;
            }
        }
        @media screen and (max-width: 820px){
            .about-video-content p{
                font-size: 24px;
                line-height: 34px;
            }
        }
        @media screen and (max-width: 600px){
            .about-video-container lite-youtube{
                width: 90%;
            }
            lite-youtube>.lyt-playbtn{
                background: no-repeat center / 54px 54px;
                background-image: url(/cdn/shop/files/video-play-icon.svg?v=1764047570);
            }
            .about-video-content p{
                font-size: 16px;
                line-height: 24px;
            }
        }
        
    </style>
    {% assign video_url =  section.settings.video_link %}
    {% assign video_id = video_url | split: 'v=' | last | split: '&' | first %}
    <div class="about-video-section-wrapper">
            <div class="about-video-section-container">
                    <div class="about-video-wrapper">
                        <div class="about-video-container">
                            {% if section.settings.video != blank%}
                                {{ section.settings.video | video_tag: autoplay: false, loop: true, muted: true, controls: false }}
                            {% elsif section.settings.video_link != blank %}
                                <lite-youtube videoid="{{ video_id }}"></lite-youtube>
                            {% endif %}
                        </div>
                    </div>
                    <div class="about-video-content">
                        <p>For any popular brand of Indian origin;  “you name it and we make sure we have a yes for you.”</p>
                    </div>
            </div>
    </div>

{% schema %}
{
  "name": "About Video",
  "tag": "section",
  "class": "about-video-section",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
    "type": "video_url",
    "id": "video_link",
    "label": "Youtube Video",
    "accept": [
        "youtube"
    ]
}
  ],
  "presets": [
    {
      "name": "About Video"
    }
  ]
}
{% endschema %}