<link
  rel="stylesheet"
  type="text/css"
  href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
/>
<link
  rel="stylesheet"
  type="text/css"
  href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"
/>
<style>
  .featured-categories {
    padding: 2rem 0;
    padding-top: 100px;
  }

  .featured-categories__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .featured-categories__title {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .featured-categories__track {
    display: flex;
  }

  .featured-category-card {
    text-align: center;
    border-radius: 10px;
    padding: 10px;
    overflow: hidden;
  }

  .featured-category-card img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    margin: 10px auto;
    transition: transform 0.3s ease;
  }

  .featured-category-card:hover img {
    transform: translateY(-4px);
  }


  /* Slick arrow styling */
  .slick-prev:before,
  .slick-next:before {
    color: #ffffff;
    background: #ED1D23;
    padding: 6px 15px;
    border-radius: 50%;
    font-family: monospace;
    font-size: 26px;
    opacity: 1;
  }
  .slick-next:before{
    content: '→';
  }
  .slick-prev:before{
    content: '←';
  }
  .slick-next:before{
    content: "";
    background-image: url(https://cdn.shopify.com/s/files/1/0979/1825/5185/files/arrow-icon-left.png?v=1763987812);
    transform: rotate(180deg);
  }
  .slick-prev:before{
    content: "";
    background-image: url(https://cdn.shopify.com/s/files/1/0979/1825/5185/files/arrow-icon-left.png?v=1763987812);
  }
  .featured-categories__track .slick-next {
      right: 30px;
  }
  .featured-categories__track .slick-prev {
    left: auto;
    right: 80px;
  }
  .featured-categories__track .slick-prev,.featured-categories__track .slick-next{
    top: -60px;
  }
  @media (max-width: 992px) {
    .featured-categories__track .slick-prev, .featured-categories__track .slick-next {
      top: -40px;
    }
    .featured-categories__track .slick-next {
        right: 40px;
    }
    .featured-categories__track .slick-prev {
        left: auto;
        right: 90px;
    }
    .slick-track{
        display: flex !important;
    }
    .slick-slide{
        height: inherit !important;
    }
  }
  @media (max-width: 768px) {
    .featured-category-card img {
      width: 60px;
      height: 60px;
    }
    /* .featured-categories__track .slick-prev, .featured-categories__track .slick-next {
      display: none !important;
    } */
    .slick-dots li.slick-active button:before {
      color: #ED1D23;
    }
  }
</style>

<div class="featured-categories-wrapper section section--page-width spacing-style">
  <div class="featured-categories" id="FeaturedCategories-{{ section.id }}">
    <div class="featured-categories__header">
      <h2 class="featured-categories__title">{{ section.settings.heading }}</h2>
    </div>

    <div class="featured-categories__track">
      {% for block in section.blocks %}
        <div class="featured-category-card" style="background-color: {{ block.settings.bg_color }};">
          {% if block.settings.collection_link %}
            <a href="{{ block.settings.collection_link.url }}">
          {% endif %}

          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '150x150' }}" alt="{{ block.settings.title }}">
          {% endif %}
          <h3>{{ block.settings.title }}</h3>

          {% if block.settings.collection_link %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<script>
  $(document).ready(function () {
    const slider = $('#FeaturedCategories-{{ section.id }} .featured-categories__track');

    slider.slick({
      infinite: false,
      slidesToShow: {{ section.settings.desktop_slides }},
      slidesToScroll: 2,
      arrows: true,
      dots: false,
      responsive: [
        {
          breakpoint: 1800,
          settings: {
            slidesToShow: {{ section.settings.desktop_slides |  minus: 2}}
          }
        },
        {
          breakpoint: 1200,
          settings: {
            slidesToShow: {{ section.settings.tablet_slides }},
            arrows: true
          }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: {{ section.settings.mobile_slides }},
            dots: true,
            arrows: false
          }
        }
      ]
    });
  });
</script>


{% schema %}
{
  "name": "Featured Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Featured Categories"
    },
    {
      "type": "range",
      "id": "desktop_slides",
      "label": "Slides to show (desktop)",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 8
    },
    {
      "type": "range",
      "id": "tablet_slides",
      "label": "Slides to show (tablet)",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "mobile_slides",
      "label": "Slides to show (mobile)",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Category title",
          "default": "Category Name"
        },
        {
          "type": "collection",
          "id": "collection_link",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category image"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background color",
          "default": "#f3f3f3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Categories",
      "category": "Custom Sections"
    }
  ]
}

{% endschema %}
