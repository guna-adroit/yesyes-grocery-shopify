<style>
  .yy-project-content-container{
            margin-top: 130px;
            margin-bottom: 80px;
        }
.yy-tab-container {
    width: 100%;
    margin: 0 auto;
}

.yy-tabs {
    display: flex;
    gap: 44px;
}

.yy-tab {
    padding: 10px 0px;
    cursor: pointer;
    text-align: center;
}

.yy-tab:hover {
    border-bottom: 3px solid #ED1D23;
}

.yy-tab{
  font-weight: 400;
  font-size: 24px;
  line-height: 25.2px;
}

.yy-tab.active {
    border-bottom: 3px solid #ED1D23;
    font-weight: bold;
    font-weight: 700;
    line-height: 25.2px;
}

.yy-tab-content {
    display: none;
    padding: 50px 0px;
    margin-top: 10px;
}

.yy-tab-content.active {
    display: block;
}
.yy-project-content-container h1{
  font-weight: 900;
  font-size: 38px;
  line-height: 64px;
}

.yy-tab-image-container{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 50px 27px;
}
.yy-tab-image-item img{
    width: 100%;
    display:block;
    border-radius: 4px;
}
@media screen and (max-width: 1024px){
  .yy-tabs{
    gap: 24px;
  }
  .yy-tab{
    font-size: 16px;
  }
}
@media screen and (min-width: 1200px){
    .yy-project-content-container{
      padding: 0 32px;
    }
}
 @media screen and (max-width: 820px){
    .yy-tabs{
      gap: 24px;
      overflow-x: auto;
      padding: 1rem;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
    }
    .yy-tab{
      flex: 0 0 auto;
      scroll-snap-align: start;
    }
    .yy-project-content-container{
        margin-top: 40px;
        margin-bottom: 20px;
    }
    .yy-tab-image-container{
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
 <link rel='stylesheet' href='https://unpkg.com/photoswipe@5.2.2/dist/photoswipe.css'>
<div class="yy-projects-content-wrapper section section--page-width">
        <div class="yy-project-content-container">
            <h1>Projects</h1>
            <div class="yy-tab-container">
                <div class="yy-tabs">
                    {% for block in section.blocks %}
                      <div class="yy-tab" id="tab{{ forloop.index }}" onclick="showTab({{ forloop.index }})">{{ block.settings.heading }}</div>
                    {% endfor %}
                </div>
                {% for block in section.blocks %}
                  <div class="yy-tab-content" id="content{{ forloop.index }}">
                      <div class="yy-tab-image-container" id="project-gallery-{{ forloop.index }}">
                          {% for i in (1..10) %}
                            {% assign key = "image-" | append: i %}
                            {% assign image = block.settings[key] %}
                              {% if image != blank %}
                                  <div class="yy-tab-image-item">
                                    <a
                                      href="{{ image | image_url: width: 1600 }}"
                                      data-pswp-width="{{ image.width }}"
                                      data-pswp-height="{{ image.height }}"
                                      target="_blank"
                                      class="project-gallery__item"
                                    >
                                      {{ image | image_url: width: 800 | image_tag  }}
                                    </a>
                                  </div>
                              {% endif %}
                          {% endfor %}
                      </div>
                  </div>
                {% endfor %}
            </div>
        </div>
    </div>


<script>
function showTab(tabNumber) {
    const allContent = document.querySelectorAll('.yy-tab-content');
    allContent.forEach(content => {
        content.classList.remove('active');
    });

    const allTabs = document.querySelectorAll('.yy-tab');
    allTabs.forEach(tab => {
        tab.classList.remove('active');
    });

    const activeContent = document.getElementById('content' + tabNumber);
    activeContent.classList.add('active');

    const activeTab = document.getElementById('tab' + tabNumber);
    activeTab.classList.add('active');
}

document.addEventListener('DOMContentLoaded', () => {
    showTab(1);
});

</script>
<script id="rendered-js" type="module">
      import PhotoSwipeLightbox from 'https://unpkg.com/photoswipe/dist/photoswipe-lightbox.esm.js';
  
      {% for block in section.blocks %}
        const lightbox{{ forloop.index }} = new PhotoSwipeLightbox({
          gallery: '#project-gallery-{{ forloop.index }}',
          children: 'a',
          pswpModule: () => import('https://unpkg.com/photoswipe') 
        });
  
        lightbox{{ forloop.index }}.init();
    {% endfor %}
  </script>

