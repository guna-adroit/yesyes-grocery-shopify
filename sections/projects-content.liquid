<style>
.yy-tab-container {
    width: 100%;
    margin: 0 auto;
}

.yy-tabs {
    display: flex;
    gap: 15px;
}

.yy-tab {
    padding: 10px 20px;
    cursor: pointer;
    text-align: center;
    transition: all 0.3s;
}

.yy-tab:hover {
    border-bottom: 3px solid #ED1D23;
    font-weight: bold;
}

.yy-tab.active {
    border-bottom: 3px solid #ED1D23;
    font-weight: bold;
}

.yy-tab-content {
    display: none;
    padding: 20px;
    background-color: #f9f9f9;
    margin-top: 10px;
}

.yy-tab-content.active {
    display: block;
}

.yy-tab-image-container{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 50px 27px;
}
.yy-tab-image-item img{
    width: 100%;
}
</style>

