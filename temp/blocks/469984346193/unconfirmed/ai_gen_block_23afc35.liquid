{% doc %}
  @prompt
    Generate an image slider with full width
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-image-slider__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slider_height }}px;
  }

  .ai-image-slider__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .ai-image-slider__slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-image-slider__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-slider__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-slider__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-image-slider__content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: {{ block.settings.text_color }};
    width: 90%;
    max-width: 800px;
  }

  .ai-image-slider__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-image-slider__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
    color: {{ block.settings.text_color }};
  }

  .ai-image-slider__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
  }

  .ai-image-slider__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-image-slider__controls-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
    padding: 0 20px;
    pointer-events: none;
  }

  .ai-image-slider__arrow-{{ ai_gen_id }} {
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    background-color: {{ block.settings.arrow_background }};
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
    transition: background-color 0.3s ease;
  }

  .ai-image-slider__arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-image-slider__arrow-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    stroke: {{ block.settings.arrow_color }};
  }

  .ai-image-slider__dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
  }

  .ai-image-slider__dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }

  .ai-image-slider__dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  @media screen and (max-width: 749px) {
    .ai-image-slider__wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.slider_height_mobile }}px;
    }

    .ai-image-slider__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-image-slider__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-image-slider__arrow-{{ ai_gen_id }} {
      width: {{ block.settings.arrow_size | times: 0.8 }}px;
      height: {{ block.settings.arrow_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<image-slider-{{ ai_gen_id }} class="ai-image-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-slider__wrapper-{{ ai_gen_id }}">
    <div class="ai-image-slider__track-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'slide_' | append: i | append: '_image'
          assign heading_key = 'slide_' | append: i | append: '_heading'
          assign subheading_key = 'slide_' | append: i | append: '_subheading'
          assign button_text_key = 'slide_' | append: i | append: '_button_text'
          assign button_link_key = 'slide_' | append: i | append: '_button_link'

          assign slide_image = block.settings[image_key]
          assign slide_heading = block.settings[heading_key]
          assign slide_subheading = block.settings[subheading_key]
          assign slide_button_text = block.settings[button_text_key]
          assign slide_button_link = block.settings[button_link_key]
        %}

        <div class="ai-image-slider__slide-{{ ai_gen_id }}" data-slide="{{ i }}">
          {% if slide_image %}
            <img
              src="{{ slide_image | image_url: width: 2000 }}"
              alt="{{ slide_image.alt | escape }}"
              loading="lazy"
              width="{{ slide_image.width }}"
              height="{{ slide_image.height }}"
              class="ai-image-slider__image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-image-slider__placeholder-{{ ai_gen_id }}">
              {{ 'hero-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}

          {% if slide_heading != blank or slide_subheading != blank or slide_button_text != blank %}
            <div class="ai-image-slider__content-{{ ai_gen_id }}">
              {% if slide_heading != blank %}
                <h2 class="ai-image-slider__heading-{{ ai_gen_id }}">{{ slide_heading }}</h2>
              {% endif %}

              {% if slide_subheading != blank %}
                <p class="ai-image-slider__subheading-{{ ai_gen_id }}">{{ slide_subheading }}</p>
              {% endif %}

              {% if slide_button_text != blank %}
                <a
                  href="{{ slide_button_link | default: '#' }}"
                  class="ai-image-slider__button-{{ ai_gen_id }}"
                >
                  {{ slide_button_text }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if block.settings.show_arrows %}
      <div class="ai-image-slider__controls-{{ ai_gen_id }}">
        <button
          class="ai-image-slider__arrow-{{ ai_gen_id }} ai-image-slider__arrow-prev-{{ ai_gen_id }}"
          aria-label="Previous slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button
          class="ai-image-slider__arrow-{{ ai_gen_id }} ai-image-slider__arrow-next-{{ ai_gen_id }}"
          aria-label="Next slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}

    {% if block.settings.show_dots %}
      <div class="ai-image-slider__dots-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          <button
            class="ai-image-slider__dot-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
            data-slide="{{ i }}"
            aria-label="Go to slide {{ i }}"
          ></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</image-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 5;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-image-slider__track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-image-slider__arrow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-image-slider__arrow-next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-image-slider__dot-{{ ai_gen_id }}');

        this.setupEventListeners();
        
        {% if block.settings.autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.goToNextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          {% if block.settings.autoplay %}
            this.startAutoplay();
          {% endif %}
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
      }

      goToNextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        this.updateSlider();
      }

      goToPrevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.updateSlider();
      }

      updateSlider() {
        const offset = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${offset}%)`;

        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, {{ block.settings.autoplay_speed | times: 1000 }});
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('image-slider-{{ ai_gen_id }}', ImageSlider{{ ai_gen_id }});
  })();
</script>

