{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slider-container-{{ ai_gen_id }} {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 100vw;
    overflow: hidden;
  }

  .ai-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .ai-slider-slide-{{ ai_gen_id }} {
    min-width: 100%;
    width: 100%;
    flex-shrink: 0;
    display: block;
  }

  .ai-slider-slide-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
    max-width: 100%;
  }

  .ai-slider-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 400px;
  }

  .ai-slider-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 400px;
  }

  .ai-slider-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-slider-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_icon_color }};
    border: none;
    width: {{ block.settings.nav_button_size }}px;
    height: {{ block.settings.nav_button_size }}px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: background-color 0.3s ease, opacity 0.3s ease;
    opacity: {{ block.settings.nav_button_opacity | divided_by: 100.0 }};
  }

  .ai-slider-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
    opacity: 1;
  }

  .ai-slider-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-slider-nav-prev-{{ ai_gen_id }} {
    left: {{ block.settings.nav_button_offset }}px;
  }

  .ai-slider-nav-next-{{ ai_gen_id }} {
    right: {{ block.settings.nav_button_offset }}px;
  }

  .ai-slider-nav-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.nav_button_size }}px * 0.5);
    height: calc({{ block.settings.nav_button_size }}px * 0.5);
  }

  .ai-slider-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
  }

  .ai-slider-dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    opacity: 0.5;
  }

  .ai-slider-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    opacity: 1;
    transform: scale(1.2);
  }

  .ai-slider-dot-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .ai-slider-nav-{{ ai_gen_id }} {
      width: calc({{ block.settings.nav_button_size }}px * 0.8);
      height: calc({{ block.settings.nav_button_size }}px * 0.8);
    }

    .ai-slider-nav-prev-{{ ai_gen_id }} {
      left: calc({{ block.settings.nav_button_offset }}px * 0.5);
    }

    .ai-slider-nav-next-{{ ai_gen_id }} {
      right: calc({{ block.settings.nav_button_offset }}px * 0.5);
    }

    .ai-slider-placeholder-{{ ai_gen_id }} {
      min-height: 300px;
    }
  }
{% endstyle %}

<image-slider-{{ ai_gen_id }} class="ai-slider-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-slider-wrapper-{{ ai_gen_id }}">
    <div class="ai-slider-track-{{ ai_gen_id }}">
      {% if block.settings.image_1 != blank or block.settings.image_2 != blank or block.settings.image_3 != blank or block.settings.image_4 != blank or block.settings.image_5 != blank %}
        {% for i in (1..5) %}
          {% assign image_key = 'image_' | append: i %}
          {% assign image = block.settings[image_key] %}
          {% if image != blank %}
            <div class="ai-slider-slide-{{ ai_gen_id }}">
              <img
                src="{{ image | image_url: width: 2000 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        <div class="ai-slider-slide-{{ ai_gen_id }}">
          <div class="ai-slider-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-slider-empty-state-{{ ai_gen_id }}">
              Add images to create your slider
            </div>
          </div>
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_navigation %}
      <button
        class="ai-slider-nav-{{ ai_gen_id }} ai-slider-nav-prev-{{ ai_gen_id }}"
        aria-label="Previous slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button
        class="ai-slider-nav-{{ ai_gen_id }} ai-slider-nav-next-{{ ai_gen_id }}"
        aria-label="Next slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    {% endif %}
  </div>

  {% if block.settings.show_dots %}
    <div class="ai-slider-dots-{{ ai_gen_id }}"></div>
  {% endif %}
</image-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-slider-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-slider-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-slider-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-slider-nav-next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-slider-dots-{{ ai_gen_id }}');
        this.autoplay = {{ block.settings.autoplay }};
        this.autoplaySpeed = {{ block.settings.autoplay_speed }} * 1000;

        if (this.slides.length <= 1) {
          if (this.prevButton) this.prevButton.style.display = 'none';
          if (this.nextButton) this.nextButton.style.display = 'none';
          if (this.dotsContainer) this.dotsContainer.style.display = 'none';
          return;
        }

        this.setupNavigation();
        this.setupDots();
        this.updateSlider();

        if (this.autoplay) {
          this.startAutoplay();
          this.addEventListener('mouseenter', () => this.stopAutoplay());
          this.addEventListener('mouseleave', () => this.startAutoplay());
        }
      }

      setupNavigation() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        }
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.goToNextSlide());
        }
      }

      setupDots() {
        if (!this.dotsContainer) return;

        this.dotsContainer.innerHTML = '';
        this.slides.forEach((slide, index) => {
          const dot = document.createElement('button');
          dot.classList.add('ai-slider-dot-{{ ai_gen_id }}');
          dot.setAttribute('aria-label', 'Go to slide ' + (index + 1));
          dot.addEventListener('click', () => this.goToSlide(index));
          this.dotsContainer.appendChild(dot);
        });
      }

      goToPrevSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlider();
        this.resetAutoplay();
      }

      goToNextSlide() {
        this.currentSlide = this.currentSlide === this.slides.length - 1 ? 0 : this.currentSlide + 1;
        this.updateSlider();
        this.resetAutoplay();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
        this.resetAutoplay();
      }

      updateSlider() {
        const offset = -this.currentSlide * 100;
        this.track.style.transform = 'translateX(' + offset + '%)';

        if (this.dotsContainer) {
          const dots = this.dotsContainer.querySelectorAll('.ai-slider-dot-{{ ai_gen_id }}');
          dots.forEach((dot, index) => {
            if (index === this.currentSlide) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        }

        if (this.prevButton) {
          this.prevButton.disabled = false;
        }
        if (this.nextButton) {
          this.nextButton.disabled = false;
        }
      }

      startAutoplay() {
        if (!this.autoplay || this.slides.length <= 1) return;
        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      resetAutoplay() {
        this.stopAutoplay();
        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('image-slider-{{ ai_gen_id }}', ImageSlider{{ ai_gen_id }});
  })();
</script>

