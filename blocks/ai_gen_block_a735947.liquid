<script>
  (function() {
    class PopularProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.filterButtons = this.querySelectorAll('.ai-popular-products__filter-btn-{{ ai_gen_id }}');
        this.gridProducts = this.querySelectorAll('.ai-popular-products__product-{{ ai_gen_id }}');
        this.sliderProducts = this.querySelectorAll('.ai-popular-products__slide-{{ ai_gen_id }}');
      }

      connectedCallback() {
        this.setupFilters();
      }

      setupFilters() {
        this.filterButtons.forEach(button => {
          button.addEventListener('click', () => {
            const filter = button.getAttribute('data-filter');
            
            this.filterButtons.forEach(btn => btn.classList.remove('active'));
            button.classList.add('active');
            
            this.filterProducts(filter);
          });
        });
      }

      filterProducts(filter) {
        this.gridProducts.forEach(product => {
          const productCollection = product.getAttribute('data-collection');
          
          if (filter === 'all') {
            if (productCollection === 'all') {
              product.classList.remove('hidden');
            } else {
              product.classList.add('hidden');
            }
          } else {
            if (productCollection === filter) {
              product.classList.remove('hidden');
            } else {
              product.classList.add('hidden');
            }
          }
        });

        this.sliderProducts.forEach(product => {
          const productCollection = product.getAttribute('data-collection');
          
          if (filter === 'all') {
            if (productCollection === 'all') {
              product.classList.remove('hidden');
            } else {
              product.classList.add('hidden');
            }
          } else {
            if (productCollection === filter) {
              product.classList.remove('hidden');
            } else {
              product.classList.add('hidden');
            }
          }
        });
      }
    }

    customElements.define('popular-products-{{ ai_gen_id }}', PopularProducts{{ ai_gen_id }});
  })();
</script>

