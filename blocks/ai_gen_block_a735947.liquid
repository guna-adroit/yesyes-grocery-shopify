{% doc %}
  @prompt
    Heading section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-heading-block-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    text-align: {{ block.settings.alignment }};
  }

  .ai-heading-block__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-heading-block__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
  }

  .ai-heading-block__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    margin: {{ block.settings.subheading_spacing }}px 0 0;
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-heading-block-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-heading-block__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-heading-block__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-heading-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-heading-block__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-heading-block__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-heading-block__subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Heading",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover our latest collection</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 800
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },
    {
      "type": "header",
      "content": "Heading style"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Size",
      "default": 48
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Subheading style"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 12,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Size",
      "default": 16
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "subheading_spacing",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Top spacing",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Heading"
    }
  ]
}
{% endschema %}