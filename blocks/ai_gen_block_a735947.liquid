{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-popular-products-{{ ai_gen_id }} {
    padding-top: {{ block.settings.spacing_top }}px;
    padding-bottom: {{ block.settings.spacing_bottom }}px;
    width: 100%;
  }

  .ai-popular-products__header-{{ ai_gen_id }} {
    margin-bottom: 32px;
    display: flex;
    gap: 46px;
  }

  .ai-popular-products__heading-{{ ai_gen_id }} {
    margin: 0 0 24px;
    text-align: center;
  }

  .ai-popular-products__filters-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-popular-products__filter-btn-{{ ai_gen_id }} {
    padding: 10px 20px;
    background: transparent;
    border: 0px solid #00000000;
    cursor: pointer;
    color: #000000cf;
    transition: all 0.3s ease;
    font-weight: 500;
    font-size: 18px;
    line-height: 25.2px;
    letter-spacing: 0;
    height: fit-content;
    position:relative;

  }
  .ai-popular-products__filter-btn-{{ ai_gen_id }}.active {
    font-weight: 700;
  }
  ai-popular-products__filter-btn-{{ ai_gen_id }}:hover {
    text-decoration: underline;
  }
  .ai-popular-products__filter-btn-{{ ai_gen_id }}:after{
    content:"";
    height: 20px;
    width: 2px;
    background: #3a3636;
    position: absolute;
    top: 50%;
    right: -6px;
    transform: translateY(-50%);
  }
  .ai-popular-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 24px;
    margin-bottom: 32px;
  }

  .ai-popular-products__product-{{ ai_gen_id }} {
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .ai-popular-products__product-{{ ai_gen_id }}.hidden {
    display: none;
  }

  .ai-popular-products__card-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .ai-popular-products__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background: #f5f5f5;
    border-radius: 4px;
    margin-bottom: 12px;
  }

  .ai-popular-products__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-popular-products__card-title-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 500;
    margin: 0 0 8px;
    color: #000000;
  }

  .ai-popular-products__card-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: #000000cf;
  }

  .ai-popular-products__view-all-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-popular-products__view-all-btn-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 32px;
    background: #ffffff;
    color: #000000;
    border-radius: 5px;
    text-decoration: none;
    cursor: pointer;
    transition: background 0.3s ease;
    font-family: Inter;
    font-weight: 700;
    font-size: 18px;
    line-height: 25.2px;
    letter-spacing: 0;
    border: 1px solid #ED1D23;
  }

  .ai-popular-products__view-all-btn-{{ ai_gen_id }}:hover {
    background: #333333;
    color: #fff
  }

  .ai-popular-products__slider-{{ ai_gen_id }} {
    display: none;
  }

  .ai-popular-products__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  @media screen and (max-width: 749px) {
    .ai-popular-products__grid-{{ ai_gen_id }} {
      display: none;
    }

    .ai-popular-products__slider-{{ ai_gen_id }} {
      display: block;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      margin-bottom: 32px;
    }

    .ai-popular-products__slider-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-popular-products__slider-track-{{ ai_gen_id }} {
      display: flex;
      gap: 16px;
      padding: 0 16px;
    }

    .ai-popular-products__slide-{{ ai_gen_id }} {
      flex: 0 0 280px;
      scroll-snap-align: start;
    }

    .ai-popular-products__slide-{{ ai_gen_id }}.hidden {
      display: none;
    }
    .ai-popular-products__header-{{ ai_gen_id }} {
      flex-direction: column;
    }
    .ai-popular-products__filter-btn-{{ ai_gen_id }}:after{
      display: none;
    }
    .ai-popular-products__filter-btn-{{ ai_gen_id }} {
      border: 1px solid #ED1D23;
      border-radius: 5px;

    }
    .ai-popular-products__filter-btn-{{ ai_gen_id }}.active {
      color: #ED1D23;
    }
  }
